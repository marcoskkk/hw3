<h1><%=@place.name%></h1>


<% for post in @place.posts%>
    <div class="post">
      <h3><%=post.title%></h3>
      <p class="post_date"><%=post.posted_on%></p>
      <p><%=post.description%></p>
    </div>
<% end %>
<br>

<p>
    <a href="/posts/new?place_id=<%= @place.id %>&place=<%=@place.name%>" class="button_new" >New Post</a>
</p>
<p>
  <a href="/places/<%= @place.id %>/edit" >Edit this place</a>
</p>

<p><%= button_to "Delete this place", @place, method: :delete %></p>

<br>

<p>
  <a href="/places">All Places</a>
</p>